<view class="container">
    <view class="brand-info">
        <view class="name">
            <image class="img" src="{{tag.app_list_pic_url}}" background-size="cover"></image>
            <view class="info-box">
                <view class="info">
                    <text class="txt">{{tag.name}}</text>
                    <text wx:if="{{tag.name}}" class="line"></text>
                </view>
            </view>
        </view>
        <view class="desc">
            {{tag.simple_desc}}
        </view>
    </view>

    <view class="cate-item">
        <view class="b">
            <block wx:for="{{goodsList}}" wx:for-index="iindex" wx:for-item="iitem">
            <navigator class="item {{iindex % 2 == 0 ? 'item-b' : ''}}" url="../goods/goods?id={{iitem.id}}">
                <image class="img" src="{{iitem.list_pic_url}}" background-size="cover"></image>
                <text class="name">{{iitem.name}}</text>
                <text class="price">ï¿¥{{iitem.retail_price}}</text>
            </navigator>
            </block>
        </view>
    </view>
</view>